<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/profile_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/robert"
                    app:civ_border_width="6dp"
                    app:civ_border_color="@color/profileImgColor"/>

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.MyButton"
                    android:text="+ Follow"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_drawable"
                    android:minWidth="120dp"
                    android:elevation="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Robert Downey Jr."
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="robert-downey.co.in"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Robert John Downey Jr. is an American actor and singer. "
                    android:textColor="@color/whiteTransparent"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:text='"I think you end up doing the stuff you were supposed to do at the time you were supposed to do it."'
                    android:textColor="@color/whiteTransparent"
                    android:textSize="11sp"/>
        </LinearLayout>

</android.support.design.widget.CoordinatorLayout>